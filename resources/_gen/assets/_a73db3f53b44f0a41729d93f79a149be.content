}
.post,
.content-section {
  border-bottom: 2px dotted var(--bg1);
  padding: 2rem 0;
}

.post {
  & figure,
  & img:not(figure img),
  & video:not(figure video) {
    margin: 0.5rem 0;
    box-sizing: border-box;
  }
}

.post-header,
.post-content__read-more {
  font-family: var(--font-monospace);
}

.post-meta__author {
